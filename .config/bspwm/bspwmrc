#!/bin/sh

pgrep -x sxhkd >/dev/null || sxhkd &

workspaces() {
    name=1
    for monitor in $(bspc query -M); do
        bspc monitor "${monitor}" -n "$name" -d I II III IV V VI
        name=$((name + 1))
    done
}

# Application rules
bspc rule -a kitty desktop=^1 follow=on
bspc rule -a firefoxdeveloperedition desktop=^2 follow=on
bspc rule -a "YouTube Music" desktop=^3 follow=on
bspc rule -a notion-app  desktop=^4 follow=on
bspc rule -a Postman  desktop=^5 follow=on
bspc rule -a Postbird desktop=^6 follow=on
bspc rule -a Nemo state=floating follow=on



# apps in float mode
bspc rule -a Nitrogen state=floating focus=on
bspc rule -a Lxappearance state=floating focus=on


workspaces
bspc config window_gap 12
bspc config single_monocle true
bspc config borderless_monocle true
bspc config gapless_monocle false
bspc config border_width 2
bspc config split_ratio 0.67
bspc config top_padding 42
bspc config normal_border_color "#817c9c"
bspc config focused_border_color "#9ccfd8"
bspc rule -a Screenkey manage=off

# autostart
nm-applet &
xsetroot -cursor_name left_ptr &
pkill polybar
~/.config/polybar/launch.sh &
nitrogen --restore &
picom &
unclutter -idle 10 &
ibus-daemon

