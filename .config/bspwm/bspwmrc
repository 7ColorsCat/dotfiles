#! /bin/sh

pgrep -x sxhkd >/dev/null || sxhkd &

workspaces() {
	name=1
	for monitor in `bspc query -M`; do
		bspc monitor ${monitor} -n "$name" -d I II III IV V 
		let name++
	done
}
# workspace 2 (Internet Browser)
declare -a web=(firefox)
for i in ${web[@]}; do
    bspc rule -a $i desktop='^2' follow=on focus=on; done

declare -a yt=(mpv -f)
for i in ${yt[@]}; do
    bspc rule -a $i desktop='^1' follow=on focus=off state=floating rectangle=800x450+560+315; done
    
workspaces
bspc config window_gap 12
bspc config single_monocle true
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config border_width 1
bspc config split_ratio 0.7
bspc config top_padding 0
bspc config normal_border_color "#817c9c"
bspc config focused_border_color "#9ccfd8"
rule -a Screenkey manage=off

# autostart
nm-applet &
xsetroot -cursor_name left_ptr &
pkill polybar
~/.config/polybar/launch.sh &
feh --bg-fill ~/.config/wallpaper/bg.jpg
picom &
unclutter -idle 10 &
ibus-daemon
